{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es2017",
    "moduleResolution": "node",
    "allowJs": false,
    "module": "commonJS",
    "declaration": false,
    "pretty": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts"]
}
